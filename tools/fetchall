#!/bin/bash

# GitHub repository details
REPO="austere-labs/collect"

# Colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Default options
FORCE_OVERWRITE=false

# Function to print colored output
print_success() {
    echo -e "${GREEN}âœ“${NC} $1"
}

print_error() {
    echo -e "${RED}âœ—${NC} $1"
}

print_info() {
    echo -e "${YELLOW}â†’${NC} $1"
}

print_header() {
    echo -e "${BLUE}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo -e "${BLUE}  GitHub Fetch All Tool${NC}"
    echo -e "${BLUE}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
}

# Function to show usage
show_usage() {
    # Additional colors for help output
    local CYAN='\033[0;36m'
    local MAGENTA='\033[0;35m'
    local BOLD='\033[1m'
    local UNDERLINE='\033[4m'
    local DIM='\033[2m'
    local RESET='\033[0m'
    
    # Header
    echo -e "${CYAN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${RESET}"
    echo -e "${CYAN}â•‘${RESET}  ${BOLD}${MAGENTA}ðŸ“¦ FETCHALL${RESET} - GitHub Resource Downloader                     ${CYAN}â•‘${RESET}"
    echo -e "${CYAN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${RESET}"
    echo ""
    
    # Usage
    echo -e "${BOLD}${BLUE}USAGE:${RESET}"
    echo -e "  ${GREEN}$${RESET} ${CYAN}fetchall${RESET} [${YELLOW}options${RESET}]"
    echo ""
    
    # Options
    echo -e "${BOLD}${BLUE}OPTIONS:${RESET}"
    echo -e "  ${YELLOW}--force${RESET}    ${DIM}â†’${RESET} Overwrite existing files"
    echo -e "  ${YELLOW}--help${RESET}     ${DIM}â†’${RESET} Show this help message"
    echo -e "  ${YELLOW}--llm${RESET}      ${DIM}â†’${RESET} Show detailed LLM-formatted usage guide"
    echo ""
    
    # Repository
    echo -e "${BOLD}${BLUE}SOURCE:${RESET}"
    echo -e "  ${UNDERLINE}https://github.com/$REPO${RESET}"
    echo ""
    
    # Resources
    echo -e "${BOLD}${BLUE}RESOURCES DOWNLOADED:${RESET}"
    echo -e "  ${GREEN}âœ“${RESET} ${CYAN}movetools${RESET}              ${DIM}(single script, if available)${RESET}"
    echo -e "  ${GREEN}âœ“${RESET} ${CYAN}tools/*${RESET}                ${DIM}(all scripts from /tools/)${RESET}"
    echo -e "  ${GREEN}âœ“${RESET} ${CYAN}.claude/commands/*.md${RESET}  ${DIM}(command templates, recursive)${RESET}"
    echo -e "  ${GREEN}âœ“${RESET} ${CYAN}.gemini/commands/*.toml${RESET} ${DIM}(Gemini TOML configs, recursive)${RESET}"
    echo -e "  ${GREEN}âœ“${RESET} ${CYAN}guides/*.md${RESET}            ${DIM}(documentation guides)${RESET}"
    echo ""
    
    # Special Features
    echo -e "${BOLD}${BLUE}SPECIAL FEATURES:${RESET}"
    echo -e "  ${YELLOW}â€¢${RESET} Auto-creates missing directories"
    echo -e "  ${YELLOW}â€¢${RESET} Preserves directory structure for commands"
    echo -e "  ${YELLOW}â€¢${RESET} Sets executable permissions on scripts"
    echo -e "  ${YELLOW}â€¢${RESET} Smart parent directory detection"
    echo ""
    
    # Examples
    echo -e "${BOLD}${BLUE}EXAMPLES:${RESET}"
    echo -e "  ${DIM}# Download all (skip existing)${RESET}"
    echo -e "  ${GREEN}$${RESET} ${CYAN}fetchall${RESET}"
    echo ""
    echo -e "  ${DIM}# Force overwrite existing files${RESET}"
    echo -e "  ${GREEN}$${RESET} ${CYAN}fetchall${RESET} ${YELLOW}--force${RESET}"
    echo ""
    
    # Footer
    echo -e "${DIM}For detailed documentation, use: ${CYAN}fetchall --llm${RESET}"
    
    exit 0
}

# Function to show LLM-formatted usage
show_llm_usage() {
    # Additional colors for LLM output
    local CYAN='\033[0;36m'
    local MAGENTA='\033[0;35m'
    local BOLD='\033[1m'
    local UNDERLINE='\033[4m'
    local DIM='\033[2m'
    local RESET='\033[0m'
    
    # Box drawing characters
    local BOX_TOP="â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
    local BOX_MID="â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£"
    local BOX_BOT="â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    local BOX_SIDE="â•‘"
    
    # Header
    echo -e "${CYAN}${BOX_TOP}${RESET}"
    echo -e "${CYAN}${BOX_SIDE}${RESET}  ${BOLD}${MAGENTA}ðŸ“¦ FETCHALL USAGE GUIDE${RESET}                                              ${CYAN}${BOX_SIDE}${RESET}"
    echo -e "${CYAN}${BOX_SIDE}${RESET}  ${DIM}Downloads resources from austere-labs/collect repository${RESET}              ${CYAN}${BOX_SIDE}${RESET}"
    echo -e "${CYAN}${BOX_MID}${RESET}"
    echo ""
    
    # Description
    echo -e "${BOLD}${BLUE}ðŸ“‹ DESCRIPTION${RESET}"
    echo -e "  Downloads multiple resources from the ${UNDERLINE}austere-labs/collect${RESET} GitHub repository."
    echo -e "  ${DIM}If run from a 'tools' subdirectory, it will place files in the parent directory.${RESET}"
    echo ""
    
    # Usage
    echo -e "${BOLD}${BLUE}ðŸš€ USAGE${RESET}"
    echo -e "  ${GREEN}$${RESET} ${CYAN}./fetchall${RESET} [${YELLOW}options${RESET}]"
    echo ""
    
    # Options
    echo -e "${BOLD}${BLUE}âš™ï¸  OPTIONS${RESET}"
    echo -e "  ${YELLOW}--force${RESET}    ${DIM}â†’${RESET} Overwrite existing files in destination directories"
    echo -e "  ${YELLOW}--help${RESET}     ${DIM}â†’${RESET} Show basic usage information"
    echo -e "  ${YELLOW}--llm${RESET}      ${DIM}â†’${RESET} Show this enhanced usage guide"
    echo ""
    
    # Repository Details
    echo -e "${BOLD}${BLUE}ðŸ“‚ REPOSITORY DETAILS${RESET}"
    echo -e "  ${BOLD}Source:${RESET} ${UNDERLINE}https://github.com/$REPO${RESET}"
    echo ""
    echo -e "  ${BOLD}Resources Downloaded:${RESET}"
    echo -e "  ${GREEN}âœ“${RESET} ${CYAN}movetools${RESET}              ${DIM}â†’ Single script file (if available)${RESET}"
    echo -e "  ${GREEN}âœ“${RESET} ${CYAN}tools/*${RESET}                ${DIM}â†’ All scripts from /tools/ directory${RESET}"
    echo -e "  ${GREEN}âœ“${RESET} ${CYAN}.claude/commands/*.md${RESET}  ${DIM}â†’ Command template files (recursive)${RESET}"
    echo -e "  ${GREEN}âœ“${RESET} ${CYAN}.gemini/commands/*.toml${RESET} ${DIM}â†’ Gemini TOML configs (recursive)${RESET}"
    echo -e "  ${GREEN}âœ“${RESET} ${CYAN}guides/*.md${RESET}            ${DIM}â†’ Guide markdown files${RESET}"
    echo ""
    
    # Directory Structure
    echo -e "${BOLD}${BLUE}ðŸ—‚ï¸  LOCAL DIRECTORY STRUCTURE${RESET}"
    echo -e "  ${MAGENTA}â”Œâ”€ Project Root${RESET}"
    echo -e "  ${MAGENTA}â”œâ”€${RESET} ${CYAN}movetools${RESET}           ${DIM}# Single script file${RESET}"
    echo -e "  ${MAGENTA}â”œâ”€${RESET} ${CYAN}tools/${RESET}              ${DIM}# Scripts directory${RESET}"
    echo -e "  ${MAGENTA}â”œâ”€${RESET} ${CYAN}.claude/${RESET}"
    echo -e "  ${MAGENTA}â”‚  â””â”€${RESET} ${CYAN}commands/${RESET}       ${DIM}# Command templates${RESET}"
    echo -e "  ${MAGENTA}â”œâ”€${RESET} ${CYAN}.gemini/${RESET}"
    echo -e "  ${MAGENTA}â”‚  â””â”€${RESET} ${CYAN}commands/${RESET}       ${DIM}# Gemini templates${RESET}"
    echo -e "  ${MAGENTA}â””â”€${RESET} ${CYAN}guides/${RESET}             ${DIM}# Guide files${RESET}"
    echo ""
    echo -e "  ${YELLOW}âš ï¸  Note:${RESET} ${DIM}When run from tools/ directory, files are placed in parent directory${RESET}"
    echo ""
    
    # Examples
    echo -e "${BOLD}${BLUE}ðŸ’¡ EXAMPLES${RESET}"
