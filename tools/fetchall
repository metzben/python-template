    echo -e "  ${GREEN}$${RESET} ${CYAN}./fetchall${RESET} ${YELLOW}--help${RESET}"
    echo ""
    
    # Features
    echo -e "${BOLD}${BLUE}âœ¨ FEATURES${RESET}"
